<div class="topbar">
  <div class="fill">
    <div class="container">
      <%= link_to "Event Registration",root_url,:class => "brand" %>
      <ul class="nav">
        <% if current_user %>
          <li><%= link_to 'Events',:controller =>'events',:action => 'index' %></li>
          <li><%= link_to 'Add Event',:controller =>'events',:action => 'new' %></li>
          <li><%= link_to "Profile", :action => "show", :controller => "users",:id => :current%></li>
          <li><%= link_to "Edit Profile",edit_user_path(:current)%></li>
          <li><%= link_to "Logout", logout_path %></li>
        <% else %>
          <li><%= link_to 'Sign In', :controller=> "user_sessions", :action=> "new" %></li>
          <li><%= link_to 'Sign Up', new_user_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
