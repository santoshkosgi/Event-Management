<!DOCTYPE html>
<html lang="en">
  <head>
    <%= yield :head %>

    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "style" %>
    <%= stylesheet_link_tag "jquery.ui.theme.css" %>
    <%= stylesheet_link_tag "jquery.ui.datepicker.css" %>
    <%= stylesheet_link_tag "jquery.ui.accordion.css" %>
    <%= javascript_include_tag "jquery-1.7.1" %>
    <%= javascript_include_tag "dropdown" %>
    <%= javascript_include_tag "jquery.ui.core" %>
    <%= javascript_include_tag "jquery.ui.widget" %>
    <%= javascript_include_tag "jquery.ui.datepicker" %>
    <%= javascript_include_tag "jquery.ui.accordion" %>
    <%= javascript_include_tag "handlebars" %>
    <%= stylesheet_link_tag "demos" %>
    <%= javascript_include_tag "jquery.colorbox.js"%>
    <%= javascript_include_tag "ajax"%>
    <%= stylesheet_link_tag "http://jacklmoore.com/colorbox/example1/colorbox.css" %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
    <div class="content">
    <div class="page-header">
      <h1>Event Management</h1>
    </div>
    <div class="row">
      <div class="span10">
        <%= yield %>
      </div>
      <div class="span4">
        <h1><%= Registration.count %> Tickets Sold </h1><br/>
        <h3>Recently Booked</h3>

        <% last = Registration.last(3) %>
        <% last.each do |last|%>
          <%= Event.find(last.event_id).name %><br/>
        <% end %>

      </div>
    </div>
    </div>

    <footer>
    <p>&copy; Company 2011</p>
    </footer>

    <script type=”text/javascript”>
     var gaJsHost = ((“https:” == document.location.protocol) ? “https://ssl.” : “http://www.”);
     document.write(unescape(“%3Cscript src=’” + gaJsHost + “google-analytics.com/ga.js’ type=’text/  javascript’%3E%3C/script%3E”));
    </script>
    <script type=”text/javascript”>
      try {
      var pageTracker = _gat._getTracker(“UA-29577479-1”);
      pageTracker._trackPageview();
      } catch(err) {}
    </script>
    </body>
</html>
