<% content_for :twitterfeed do %>
  <script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
  <script>
      new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 4,
        interval: 30000,
        width: 220,
        height: 250,
        theme: {
          shell: {
            background: '#333333',
            color: '#ffffff'
          },
          tweets: {
            background: '#000000',
            color: '#ffffff',
            links: '#4aed05'
          }
        },
        features: {
          scrollbar: false,
          loop: false,
          live: false,
          behavior: 'all'
        }
      }).render().setUser('Elegato1').start();
  </script>
<% end %>
