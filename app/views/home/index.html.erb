  <div class="alert-message success">
  <%= content_tag :div, msg, :id => key %>
  </div>

<% end %>
<% content_for :head do %>
  <title>Elegato</title>
<% end %>
<% content_for :pagename do %>
  Elegato
<% end %>
<% content_for :header do %>
  <h1>Elegato</h1>
<% end %>
